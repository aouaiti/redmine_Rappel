<h2><%= l(:label_rappel_edit) %></h2>

<%= labelled_form_for @rappel, url: project_rappel_path(@project, @rappel) do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  <p>
    <%= f.submit l(:button_save) %>
    <%= link_to l(:button_cancel), project_rappels_path(@project) %>
  </p>
<% end %> 